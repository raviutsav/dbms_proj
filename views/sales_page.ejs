<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>

    <div id="form">
        <form action="/sales_page" method = "POST">

            <div id="Sales"> 
                <h1 class="info">Sales Information</h1><br>

                <label class="Label" for="date">Date<span>*</span></label>
                <input class="Text" type="date" id="date" name="date"><br><br>

                <label class="Label" for="staff_id">Staff ID<span>*</span></label>
                <br>
                <input class="Text" type="number" id="staff_id" name="staff_id"><br><br>

                <label class="Label" for="customer_name">Customer Name<span>*</span></label>
                <br>
                <input class="Text" type="text" id="customer_name" name="customer_name"><br><br>

                <label class="Label" for="milk_type">Milk Type<span>*</span></label><br>
                <input class="Text" type="text" id="milk_type" name="milk_type"><br><br>

                <label class="Label" for="rate">Rate<span>*</span></label><br>
                <input class="Text" type="number" step="0.25" id="rate" name="rate"><br><br>

                <label class="Label" for="quantity">Quantity<span>*</span></label><br>
                <input class="Text" type="number" id="quantity" name="quantity"><br><br>

                <label class="Label" for="total">Total<span>*</span></label><br>
                <input class="Text" type="number" step="0.25" id="total" name="total" default="0"><br><br>
            </div>

            <br>
            <br>
            <br>
            <input id="Submit" type="submit" value="Submit">
        </form>
    </div>

    <br><br><br><br><br><br><br>
    <hr>
    <br>
    <br>
    <br>
    <br>
    <h3>All Sales Made</h3>
    <br>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>

                <tr>
                    <th>Sales ID</th>
                    <th>Staff ID</th>
                    <th>Customer Name</th>
                    <th>Date</th>
                    <th>Milk Type</th>
                    <th>Rate</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < rows.length; i++) { %>
                    <tr>
                        <td><%= rows[i].sales_id %></td>
                        <td><%= rows[i].staff_id %></td>
                        <td><%= rows[i].customer_name %></td>
                        <td><%= rows[i].date %></td>
                        <td><%= rows[i].milk_type %></td>
                        <td><%= rows[i].rate %></td>
                        <td><%= rows[i].quantity %></td>
                        <td><%= rows[i].total %></td>
                   </tr>
                <% } %>
            </tbody>
            
            
        </table>

    </div>

    <footer> 
        <a href="/">Home</a>
    </footer>
    
</body>

</html>